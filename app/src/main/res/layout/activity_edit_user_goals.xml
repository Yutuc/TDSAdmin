<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".edit_user_goals.EditUserGoalsActivity">
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/start_weight_input_edit_user_goals" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:hint="Start weight"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/goal_weight_edit_user_goals"
            app:layout_constraintTop_toBottomOf="@+id/start_weight_input_edit_user_goals"
            app:layout_constraintStart_toStartOf="@+id/start_weight_input_edit_user_goals"
            app:layout_constraintEnd_toEndOf="@+id/start_weight_input_edit_user_goals" android:hint="Goal weight"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/protein_input_edit_user_goals"
            app:layout_constraintTop_toBottomOf="@+id/goal_weight_edit_user_goals"
            app:layout_constraintStart_toStartOf="@+id/goal_weight_edit_user_goals"
            app:layout_constraintEnd_toEndOf="@+id/goal_weight_edit_user_goals" android:hint="Protein"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/carbohydrates_input_edit_user_goals"
            app:layout_constraintTop_toBottomOf="@+id/protein_input_edit_user_goals"
            app:layout_constraintStart_toStartOf="@+id/protein_input_edit_user_goals"
            app:layout_constraintEnd_toEndOf="@+id/protein_input_edit_user_goals" android:hint="Carbohydrates"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/fats_input_edit_user_goals"
            app:layout_constraintTop_toBottomOf="@+id/carbohydrates_input_edit_user_goals"
            app:layout_constraintStart_toStartOf="@+id/carbohydrates_input_edit_user_goals"
            app:layout_constraintEnd_toEndOf="@+id/carbohydrates_input_edit_user_goals" android:hint="Fats"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/calories_input_edit_user_goals"
            app:layout_constraintTop_toBottomOf="@+id/fats_input_edit_user_goals"
            app:layout_constraintStart_toStartOf="@+id/fats_input_edit_user_goals"
            app:layout_constraintEnd_toEndOf="@+id/fats_input_edit_user_goals" android:hint="Calories"/>
</android.support.constraint.ConstraintLayout>