<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <TextView
            android:text="Warmup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/warmup_card_title_textview" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="Exercise"
            android:layout_width="wrap_content"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            android:layout_height="wrap_content"
            android:id="@+id/exercise_textview_warmup" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/rpe_textview"
            android:layout_marginStart="16dp" app:layout_constraintTop_toBottomOf="@+id/warmup_card_title_textview"
            android:layout_marginTop="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"/>
    <TextView
            android:text="RPE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rpe_textview"
            app:layout_constraintStart_toEndOf="@+id/exercise_textview_warmup" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="25dp"
            app:layout_constraintTop_toBottomOf="@+id/warmup_card_title_textview" android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:text="SetsXReps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sets_reps_textview_warmup"
            app:layout_constraintTop_toBottomOf="@+id/warmup_card_title_textview" android:layout_marginTop="8dp"
            app:layout_constraintStart_toEndOf="@+id/exercise_textview_warmup" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/rpe_textview" android:layout_marginEnd="27dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>