<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".InputWarmupExerciseActivity">
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/exercise_name_input_warmup" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:hint="Exercise name"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/sets_input_warmup" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/exercise_name_input_warmup"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:hint="# of sets"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/reps_input_warmup" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/sets_input_warmup" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:hint="# of reps"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/rpe_input_warmup" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/reps_input_warmup" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:hint="RPE"/>
    <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/add_exercise_button_warmup" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/rpe_input_warmup"
            app:layout_constraintStart_toStartOf="@+id/rpe_input_warmup"
            app:layout_constraintEnd_toEndOf="@+id/rpe_input_warmup" android:text="Add exercise"/>
</android.support.constraint.ConstraintLayout>