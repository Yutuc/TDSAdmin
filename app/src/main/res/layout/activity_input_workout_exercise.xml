<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".InputWorkoutExerciseActivity">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/exercise_name_input_workout" android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent" android:hint="Exercise name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/sets_input_workout" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/exercise_name_input_workout" android:hint="# of sets"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/reps_input_workout" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/sets_input_workout" android:hint="# of reps"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/rpe_input_workout" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/reps_input_workout" android:hint="RPE"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="Add exercise"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/add_exercise_button_workout" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/rpe_input_workout"
            app:layout_constraintStart_toStartOf="@+id/rpe_input_workout"
            app:layout_constraintEnd_toEndOf="@+id/rpe_input_workout"/>
</android.support.constraint.ConstraintLayout>