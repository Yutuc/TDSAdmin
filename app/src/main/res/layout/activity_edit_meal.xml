<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view_user_nutrition.EditMealActivity">

    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/meal_name_input_edit_meal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp" android:layout_marginEnd="16dp" android:hint="Meal name"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintTop_toBottomOf="@+id/textView5"/>
    <TextView
            android:text="Meal name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="parent"
            android:textSize="18sp" android:layout_marginStart="16dp"/>
    <TextView
            android:text="Protein"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView10" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/meal_name_input_edit_meal"
            app:layout_constraintStart_toStartOf="@+id/meal_name_input_edit_meal"
            android:textSize="18sp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/protein_input_edit_meal"
            app:layout_constraintStart_toStartOf="@+id/textView10"
            app:layout_constraintTop_toBottomOf="@+id/textView10" android:hint="Protein"
            app:layout_constraintEnd_toEndOf="@+id/meal_name_input_edit_meal"/>
    <TextView
            android:text="Carbohydrates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView11" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/protein_input_edit_meal"
            app:layout_constraintStart_toStartOf="@+id/protein_input_edit_meal" android:textSize="18sp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/carbohydrates_input_edit_meal"
            app:layout_constraintTop_toBottomOf="@+id/textView11"
            app:layout_constraintStart_toStartOf="@+id/textView11"
            app:layout_constraintEnd_toEndOf="@+id/protein_input_edit_meal" android:hint="Carbohydrates"/>
    <TextView
            android:text="Fat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView12" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/carbohydrates_input_edit_meal"
            app:layout_constraintStart_toStartOf="@+id/carbohydrates_input_edit_meal" android:textSize="18sp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/fat_input_edit_meal"
            app:layout_constraintTop_toBottomOf="@+id/textView12"
            app:layout_constraintStart_toStartOf="@+id/textView12"
            app:layout_constraintEnd_toEndOf="@+id/carbohydrates_input_edit_meal" android:hint="Fat"/>
    <TextView
            android:text="Vegetables"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView13" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/fat_input_edit_meal"
            app:layout_constraintStart_toStartOf="@+id/fat_input_edit_meal" android:textSize="18sp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/vegetables_input_edit_meal"
            app:layout_constraintTop_toBottomOf="@+id/textView13"
            app:layout_constraintStart_toStartOf="@+id/textView13"
            app:layout_constraintEnd_toEndOf="@+id/fat_input_edit_meal" android:hint="Vegetables"/>
</android.support.constraint.ConstraintLayout>