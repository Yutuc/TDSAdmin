<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".add_workout.InputConditioningExerciseActivity">

    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            app:layout_constraintTop_toBottomOf="@+id/exercise_name_input_conditioning"
            android:id="@+id/minutes_input_conditioning"
            android:hint="Minutes"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"/>
    <Button
            android:text="Add exercise"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/add_exercise_button_conditioning"
            app:layout_constraintStart_toStartOf="@+id/minutes_input_conditioning"
            app:layout_constraintEnd_toEndOf="@+id/minutes_input_conditioning"
            app:layout_constraintHorizontal_bias="1.0" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/seconds_input_conditioning"/>
    <TextView
            android:text="Click to select exercise"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/exercise_name_input_conditioning" app:layout_constraintStart_toStartOf="@+id/minutes_input_conditioning"
            app:layout_constraintEnd_toEndOf="@+id/minutes_input_conditioning" android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent" android:textSize="24sp"
            android:textAlignment="center"
            android:textStyle="bold"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:hint="Seconds"
            android:id="@+id/seconds_input_conditioning" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/minutes_input_conditioning"
            app:layout_constraintStart_toStartOf="@+id/minutes_input_conditioning"
            app:layout_constraintEnd_toEndOf="@+id/minutes_input_conditioning"/>
</android.support.constraint.ConstraintLayout>