<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.univation.tdsadmin">

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".ViewUserWorkoutsActivity">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value=".ViewScheduledCheckInsActivity"/>
        </activity>
        <activity android:name=".ViewScheduledCheckInsActivity">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value=".ChooseActionActivity"/>
        </activity>
        <activity android:name=".InputWarmupExerciseActivity">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value=".AddWorkoutActivity"/>
        </activity>
        <activity android:name=".InputWorkoutExerciseActivity">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value=".AddWorkoutActivity"/>
        </activity>
        <activity
                android:name=".AddCheckInActivity"
                android:screenOrientation="portrait">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value=".ChooseUserActivity"/>
        </activity>
        <activity
                android:name=".AddWorkoutActivity"
                android:screenOrientation="portrait">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value=".ChooseUserActivity"/>
        </activity>
        <activity
                android:name=".ChooseActionActivity"
                android:screenOrientation="portrait">
        </activity>
        <activity
                android:name=".SplashScreenActivity"
                android:screenOrientation="portrait"
                android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".ChooseUserActivity"
                android:screenOrientation="portrait">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value=".ChooseActionActivity"/>
        </activity>
        <activity
                android:name=".LoginActivity"
                android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>